<!DOCTYPE web-app PUBLIC 
    "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <!-- Display name of the application -->
    <display-name>Star Protect Vehicle</display-name>

    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Context parameters -->
    <context-param>
        <param-name>param1</param-name>
        <param-value>value1</param-value>
    </context-param>

    <!-- Filters (if any) -->
    <!-- Example:
    <filter>
        <filter-name>ExampleFilter</filter-name>
        <filter-class>com.example.ExampleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ExampleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    -->

    <!-- Servlet and servlet mapping for Admin Login -->
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <jsp-file>/adminLogin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/adminLogin</url-pattern>
    </servlet-mapping>

    <!-- Servlet and servlet mapping for UnderWriter Login -->
    <servlet>
        <servlet-name>UnderWriterLoginServlet</servlet-name>
        <jsp-file>/underWriterLogin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UnderWriterLoginServlet</servlet-name>
        <url-pattern>/underWriterLogin</url-pattern>
    </servlet-mapping>

    <!-- Servlet and servlet mapping for Register UnderWriter -->
    <servlet>
        <servlet-name>RegisterUnderWriterServlet</servlet-name>
        <jsp-file>/registerUnderWriterAction.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterUnderWriterServlet</servlet-name>
        <url-pattern>/registerUnderWriter</url-pattern>
    </servlet-mapping>

    <!-- Session timeout configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- MIME mappings (if any) -->
    <!-- Example:
    <mime-mapping>
        <extension>jpg</extension>
        <mime-type>image/jpeg</mime-type>
    </mime-mapping>
    -->

    <!-- Error page configuration -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>

    <!-- Tag libraries (if any) -->
    <!-- Example:
    <taglib>
        <taglib-uri>http://example.com/tld</taglib-uri>
        <taglib-location>/WEB-INF/tld/example.tld</taglib-location>
    </taglib>
    -->

    <!-- Resource environment references (if any) -->
    <!-- Example:
    <resource-env-ref>
        <resource-env-ref-name>example</resource-env-ref-name>
        <resource-env-ref-type>javax.sql.DataSource</resource-env-ref-type>
    </resource-env-ref>
    -->

    <!-- Resource references (if any) -->
    <!-- Example:
    <resource-ref>
        <res-ref-name>jdbc/ExampleDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    -->

    <!-- Security constraints (if any) -->
    <!-- Example:
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Area</web-resource-name>
            <url-pattern>/protected/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    -->

    <!-- Login configuration (if any) -->
    <!-- Example:
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>ExampleRealm</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    -->

    <!-- Security roles (if any) -->
    <!-- Example:
    <security-role>
        <role-name>admin</role-name>
    </security-role>
    -->

    <!-- Environment entries (if any) -->
    <!-- Example:
    <env-entry>
        <env-entry-name>maxExemptions</env-entry-name>
        <env-entry-value>10</env-entry-value>
        <env-entry-type>java.lang.Integer</env-entry-type>
    </env-entry>
    -->

    <!-- EJB references (if any) -->
    <!-- Example:
    <ejb-ref>
        <ejb-ref-name>ejb/ExampleEJB</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <home>com.example.ExampleEJBHome</home>
        <remote>com.example.ExampleEJB</remote>
    </ejb-ref>
    -->

    <!-- EJB local references (if any) -->
    <!-- Example:
    <ejb-local-ref>
        <ejb-ref-name>ejb/LocalExampleEJB</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local-home>com.example.LocalExampleEJBHome</local-home>
        <local>com.example.LocalExampleEJB</local>
    </ejb-local-ref>
    -->

</web-app>
